{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Warning"
    },
    "Console": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Warning"
      },
      "FormatterName": "simple",
      "FormatterOptions": {
        "SingleLine": true,
        "IncludeScopes": false,
        "UseUtcTimestamp": false,
        "TimestampFormat": "yyyy-MM-dd HH:mm:ss ",
        "MessageTemplate": "{Timestamp} {Message}{NewLine}"
      }
    }
  },
  "AllowedHosts": "*"
}